{
  "manifest_version": 3,
  "name": "Peaceful GitHub pull request",
  "short_name": "Peaceful PR",
  "description": "Add suffix and animal images to GitHub pull request comments",
  "version": "1.0.0",
  "author": "midorimici",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["https://github.com/*/*/pull/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/pull/*"],
      "js": ["content_scripts.js"],
      "run_at": "document_end"
    }
  ]
}
